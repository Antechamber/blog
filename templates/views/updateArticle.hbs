<!DOCTYPE html>
<html>

<head>
    {{> head }}
    <title>Modify article | Brianday.dev</title>
    <link rel='stylesheet' type='text/css' href='/css/compose.css'>
</head>

<body>
    {{> topnav}}

    <div class="row">

        <div class="column" id="main-content-column">
            <form id="compose-form">
                <h2>Modify Article:</h2>

                <label for="title">Title:</label>
                <input id="title" type="text" name="title" required autocomplete="off">

                <textarea id="text" type="text" align="top" name="text" required
                    autocomplete="off">{{{ text }}}</textarea>
                <span id="error"></span>
                <div id="compose-form-button-container">
                    <button type="submit" value="submit">Submit</button>
                    <button id="button-article-delete" onclick="deleteArticle()" type="button" value="delete">DELETE
                        ARTICLE</button>
                </div>
            </form>
        </div>

        {{> linkscolumn }}
    </div>
</body>
<script src="/js/updateArticle.js"></script>
<script>
    document.querySelector('#title').value = "{{ title }}"
</script>

</html>